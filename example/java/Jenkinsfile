#!/usr/bin/env groovy

pipeline {
  agent { label "build" }
  stages {
    stage('pre build') {
      steps {
        sh "echo 'pre build'"
        sh "sleep 5"
      }
    }
    stage('build') {
      steps {
        sh "echo 'build'"
        sh "sleep 10"
      }
    }
    stage("post build") {
      steps {
        sh "echo 'post build'"
        sh "sleep 15"
      }
    }
  }
}